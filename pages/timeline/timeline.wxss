/* pages/timeline/timeline.wxss */
@import "../tpls/timeline/timeline-tpl.wxss";

.timeline-container {
    /*min-height: 100vh;*/
}

.timeline-box {
    display: flex;
    height: 100vh;
    /* overflow: hidden; */
}

.left-box {
    flex: 0 0 150rpx;
    border-right: 1rpx solid #d8d8d8;
}

.menu-item {
    height: 50rpx;
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    border-left: 6rpx solid #f8f8f8;
}

.menu-item.selected {
    color: #ab956d;
    border-left-color: #ab956d;
}

.right-box {
    flex: 1;
}

.right-box .item-title {
    display: inline-block;
    vertical-align: middle;
    font-size: 30rpx;
}

.foods-type-box {
    height: 100vh;
}

.weui-badge {
    font-size: 11px;
}
