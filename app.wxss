/**app.wxss**/
@import 'style/weui.wxss';

page {
    background-color: #f8f8f8;
    font-size: 16px;
    font-family: 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.page__hd {
    padding: 30px 40px 20px;
}

.page__bd {
    padding-bottom: 20px;
}

.page__bd_spacing {
    padding-left: 15px;
    padding-right: 15px;
}

.page__ft {
    padding-bottom: 10px;
    text-align: center;
}

.page__title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.page__desc {
    margin-top: 5px;
    color: #888;
    text-align: left;
    font-size: 14px;
}

.avatar {
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: block;
    border: 1px solid #ebeae8;
}
